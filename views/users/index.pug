extends ../layouts/common

block account
    if user 
        h5= user.name
        span &nbsp;
        a.btn.btn-primary(href='/auth/logout') Log out
        span &nbsp;

block content        
    h1 
        span.mr-3 Users
        span &nbsp;
        a.btn.btn-primary(href="/users/create") Create user

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            span &nbsp;
            button(class="btn btn-primary ml-3") Search

    table.table 
        tr  
            th Avatar
            th Name 
            th Phone 
            th Actions

        each user in users 
            tr
                td 
                    img(src= user.avatar, width='32')
                td= user.name 
                td= user.phone
                td 
                    a.btn.btn-light(href='/users/' + user.id) View