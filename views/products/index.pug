extends ../layouts/common

block content        
    h1 
        span.mr-3 Products

    .d-flex.align-items-center
        form.ml-auto(action="/products", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2")  Search

    .row.d-flex
        each product in products
            .card.col-md-3.ml-5
                img.card-img-top(src= product.image)
                .card-body
                    p.card-text= product.description
                    a.btn.btn-primary(href='#') Add to cart
  
    ul.pagination.justify-content-end
        if prevPage!==-1
            a.page-link(href='/products/?page=' + prevPage) Previous
            span &nbsp; 
            span &nbsp;
            a.page-link(href='/products/?page=' + prevPage) #{prevPage}

        span &nbsp;
    
        a.page-link(href='/products/?page=' + page) 
            #{page}

        span &nbsp;

        if nextPage!==-1 
            a.page-link(href='/products/?page=' + nextPage) #{nextPage}
            span &nbsp; 
            span &nbsp;
            a.page-link(href='/products/?page=' + nextPage) Next   
                        